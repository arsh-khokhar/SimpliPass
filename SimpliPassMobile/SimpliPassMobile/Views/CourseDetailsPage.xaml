<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpliPassMobile.Views.CourseDetailsPage">

    <NavigationPage.TitleView>
        <Label Text="SimpliPass"
               HorizontalTextAlignment="Start"
               FontFamily="sans-serif-light"
               FontSize="Title"
               TextColor="White" />
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Label x:Name="CurrID" HorizontalTextAlignment="Center" FontSize="Large" />
            <Label x:Name="CurrDept" HorizontalTextAlignment="Center" FontSize="Medium" />
            <Label x:Name="CurrDiff" HorizontalTextAlignment="Center" FontSize="Large" Margin="20,20,20,0" />
            <Label x:Name="CurrDiffCount" HorizontalTextAlignment="Center" FontSize="Small" />
            <Label Text="Section Ratings" HorizontalTextAlignment="Center" FontSize="Medium" Margin="35" />

            <ListView ItemsSource="{Binding SectionRatings}" HasUnevenRows="true" Margin="60,0,60,60">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10" RowSpacing="10" ColumnSpacing="10">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="1"
                                       Text="{Binding Name}"
                                       VerticalOptions="End"
                                       HorizontalTextAlignment="Start"
                                       FontSize="Small" />

                                <Label Grid.Column="1"
                                       Text="{Binding Rating}"
                                       VerticalOptions="End"
                                       HorizontalTextAlignment="End"
                                       FontSize="Small" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>